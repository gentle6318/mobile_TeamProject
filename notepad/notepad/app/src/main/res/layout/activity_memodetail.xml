<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/temp_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목 :"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/temp_memo"
        android:layout_marginLeft="10dp"
        android:text="ㅁㅁ"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/btn_detail_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="사이트로 이동"/>

    <TextView
        android:id="@+id/tv_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp_memo"
        android:layout_marginTop="15dp"
        android:text="날짜"/>

    <TextView
        android:id="@+id/tv_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/temp_memo"
        android:layout_toRightOf="@id/tv_detail_date"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="시간"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/tv_detail_date"
        android:layout_marginTop="15dp"
        android:background="@color/yellow">
        <TextView
            android:id="@+id/tv_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="글"/>
    </ScrollView>



</RelativeLayout>